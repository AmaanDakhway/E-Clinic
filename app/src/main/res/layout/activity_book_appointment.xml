<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".BookAppointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="0dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Make an Appointment"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn1"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_corners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Pick a Date    "
            android:layout_marginTop="100dp"
            android:layout_marginLeft="270dp"/>

        <EditText
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:hint="Select Date"
            android:enabled="false"/>

        <Spinner
            android:id="@+id/spinner1"
            android:textColor="@color/black"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:tooltipText="Select Time"
            android:textColorHint="@color/black"
            android:layout_marginTop="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/btn1"/>

        <EditText
            android:id="@+id/textTime"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="20dp"
            android:hint="Select Time"
            android:enabled="false"/>

        <EditText
            android:id="@+id/textSymptoms"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Symptoms"
            android:layout_below="@+id/textTime"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/textBloodGroup"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/textSymptoms"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Blood Group"/>

        <EditText
            android:id="@+id/textName"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/black"
            android:layout_below="@+id/textBloodGroup"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Your Full Name"/>

        <EditText
            android:id="@+id/textAge"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/textName"
            android:inputType="phone"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/black"
            android:hint="Enter your Age"/>

        <EditText
            android:id="@+id/textEmail"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/black"
            android:layout_below="@+id/textAge"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Your Email ID"/>

        <EditText
            android:id="@+id/textPhone"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/black"
            android:inputType="phone"
            android:layout_below="@+id/textEmail"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Your Phone Number"/>

        <TextView
            android:id="@+id/textView10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gender"
            android:layout_below="@+id/textPhone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/textView10">

            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/radioButton"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/textView8"
            android:layout_below="@+id/radioGroup"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/radioGroup"/>


        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_corners"
            android:text="Submit"/>




    </RelativeLayout>

</ScrollView>